<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item android:top="10dp">
                <shape>
                    <!--                    <corners android:radius="19dp"/>-->
                    <solid android:color="#6D000000" />
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="10dp" android:right="10dp">
                <shape>
                    <solid android:color="@color/black" />
                    <padding android:bottom="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:bottom="10dp" android:right="10dp">
                <shape>
                    <solid android:color="@color/main_color_4" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item android:top="20dp">
                <shape>
                    <!--                    <corners android:radius="19dp"/>-->
                    <solid android:color="#6D000000" />
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="20dp" android:right="20dp">
                <shape>
                    <solid android:color="@color/black" />
                    <padding android:bottom="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item android:bottom="20dp" android:right="20dp">
                <shape>
                    <solid android:color="@color/main_color_5" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>